<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/quot_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dailyrun" />

            <TextView
                android:id="@+id/myImageViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/quot_image"
                android:layout_alignTop="@id/quot_image"
                android:layout_alignRight="@id/quot_image"
                android:layout_alignBottom="@id/quot_image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Compitation keeps you active and dynamic"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="10dp"
                android:id="@+id/challenge_goal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="cover 2000 steps" />

            <Button
                android:layout_marginLeft="100dp"
                android:id="@+id/challenge_action"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/colorAccent"
                android:text="join"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>