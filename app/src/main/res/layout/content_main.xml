<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/bubble"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="10dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="25dp">

                <android.support.v7.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:elevation="30dp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/stepsbutton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/steps" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:elevation="30dp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/caloriesbutton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/calories" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:elevation="30dp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/somethingbutton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/something" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:elevation="30dp"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/improvementsbutton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/improvements" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <!-- FRIEND PROFILE PIC -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="275dp"
                android:paddingTop="15dp">

                <android.support.v7.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/friendprofilepic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:paddingRight="10dp"

                        android:src="@drawable/friendprofile" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/leftover"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="52 more" />


            </LinearLayout>

            <!-- bubbles insight -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!-- all bubbles!! -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">
                    <!-- chart was here -->
                    <RelativeLayout
                        android:id="@+id/option1bubble1"
                        android:layout_width="match_parent"
                        android:layout_height="220dp">

                        <az.plainpie.PieView
                            android:id="@+id/animated_pie_view_1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="105dp"
                            app:inner_text="0"
                            plainpie:inner_pie_padding="30"
                            plainpie:inner_text_visibility="true"
                            plainpie:percentage="75"
                            plainpie:percentage_size="30" />

                        <TextView
                            android:id="@+id/option1text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="84dp"
                            android:layout_marginBottom="42dp"
                            android:text=""
                            android:textAlignment="center"
                            android:textColor="@color/darkred"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/playoption1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="164dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/playoption1" />
                    </RelativeLayout>
                    <!-- bubble 1 was here!! -->
                    <RelativeLayout
                        android:id="@+id/option2bubble2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <me.itangqi.waveloadingview.WaveLoadingView
                            android:id="@+id/waveLoadingView2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="108dp"
                            app:wlv_borderColor="@color/white"
                            app:wlv_borderWidth="3dp"

                            app:wlv_round_rectangle="true"
                            app:wlv_shapeType="circle"
                            app:wlv_titleBottomColor="@color/colorAccent"
                            app:wlv_titleBottomSize="24sp"

                            app:wlv_titleBottomStrokeColor="@color/colorAccent"
                            app:wlv_titleBottomStrokeWidth="1dp"
                            app:wlv_titleCenterColor="@color/colorAccent"
                            app:wlv_titleCenterSize="24sp"

                            app:wlv_titleCenterStrokeColor="@color/colorAccent"
                            app:wlv_titleCenterStrokeWidth="1dp"
                            app:wlv_titleTopColor="@color/colorAccent"
                            app:wlv_titleTopSize="24sp"

                            app:wlv_titleTopStrokeColor="@color/colorAccent"
                            app:wlv_titleTopStrokeWidth="1dp"

                            app:wlv_triangle_direction="north"
                            app:wlv_waveAmplitude="70"
                            app:wlv_waveColor="@color/lightyellow" />

                        <TextView
                            android:id="@+id/option2text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="131dp"
                            android:layout_marginBottom="17dp"
                            android:text="124 calories burnt"
                            android:textStyle="bold" />

                        <!-- second bubble was here -->

                    </RelativeLayout>
                    <!-- bubble 2 was here!! -->
                    <RelativeLayout
                        android:id="@+id/option3bubble3"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <me.itangqi.waveloadingview.WaveLoadingView
                            android:id="@+id/waveLoadingView3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="108dp"
                            app:wlv_borderColor="@color/white"
                            app:wlv_borderWidth="3dp"

                            app:wlv_round_rectangle="true"
                            app:wlv_shapeType="circle"
                            app:wlv_titleBottomColor="@color/colorAccent"
                            app:wlv_titleBottomSize="24sp"

                            app:wlv_titleBottomStrokeColor="@color/colorAccent"
                            app:wlv_titleBottomStrokeWidth="1dp"
                            app:wlv_titleCenterColor="@color/colorAccent"
                            app:wlv_titleCenterSize="24sp"

                            app:wlv_titleCenterStrokeColor="@color/colorAccent"
                            app:wlv_titleCenterStrokeWidth="1dp"
                            app:wlv_titleTopColor="@color/colorAccent"
                            app:wlv_titleTopSize="24sp"

                            app:wlv_titleTopStrokeColor="@color/colorAccent"
                            app:wlv_titleTopStrokeWidth="1dp"

                            app:wlv_triangle_direction="north"
                            app:wlv_waveAmplitude="70"
                            app:wlv_waveColor="@color/lightpurple" />

                        <TextView
                            android:id="@+id/option3text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="131dp"
                            android:layout_marginBottom="17dp"
                            android:text="173/1073 calories taken"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="78dp"
                            android:layout_height="48dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="153dp"
                            android:layout_marginTop="188dp"
                            android:src="@drawable/camera" />

                        <!-- third bubble was here -->

                    </RelativeLayout>
                    <!-- bubble 3 was here!! -->
                    <RelativeLayout
                        android:id="@+id/option4bubble4"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp">

                        <ImageView
                            android:id="@+id/exerciseimage"
                            android:layout_width="288dp"
                            android:layout_height="179dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="0dp"
                            android:src="@drawable/exercise1" />

                        <ImageView
                            android:id="@+id/prevbttn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="92dp"
                            android:src="@drawable/prev_bttn" />

                        <ImageView
                            android:id="@+id/nextbttn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="263dp"
                            android:layout_marginBottom="1dp"
                            android:src="@drawable/next_bttn" />

                        <ImageView
                            android:id="@+id/joinbttn"
                            android:layout_width="62dp"
                            android:layout_height="23dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="161dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/joinbttn" />

                        <ImageView
                            android:id="@+id/arcamera"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="289dp"
                            android:layout_marginTop="175dp"
                            android:src="@drawable/camera" />

                        <!-- fourth bubble was here -->

                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!-- IMAGE SLIDER -->
        <LinearLayout
            android:id="@+id/challangeprjayga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <technolifestyle.com.imageslider.FlipperLayout
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </technolifestyle.com.imageslider.FlipperLayout>

        </LinearLayout>

        <!--redeem and games -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">
            <!--redeem -->
            <android.support.v7.widget.CardView
                android:id="@+id/play_sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:minHeight="100dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:transitionName="transition1"
                app:cardCornerRadius="6dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:drawableLeft="@drawable/game"
                        android:drawablePadding="10dp"
                        android:padding="5dp"
                        android:text="  Create Team,Join Game,Book and more ..."
                        android:textColor="@color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/challangesprjarehai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/playoption1" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
