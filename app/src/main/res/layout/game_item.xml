<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <LinearLayout
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game"
            />
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sports_type"
            android:text="Foot Ball"
            >
        </TextView>
        </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:drawableLeft="@drawable/ic_location_searching_black_24dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="5th main ittamadu,banashankari"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:entries="@array/level_arrays"
        android:prompt="@string/level_prompt">


    </android.support.v7.widget.AppCompatSpinner>
    <Button
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Re Shedule"
        android:layout_gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/reuse"
        />

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>